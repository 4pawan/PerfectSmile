<UserControl x:Class="PerfectSmile.Views.NextAppointment"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Patient Id" Width="*"   Binding="{Binding Id}"/>
                <DataGridTextColumn Header="Name" Width="*" Binding="{Binding Name}" />
                <DataGridTextColumn Header="Phone" Width="*" Binding="{Binding Name}" />
                <DataGridTextColumn Header="Next Appointment" Width="*" Binding="{Binding Name}" />
                <DataGridTextColumn Header="Last Entered Balance" Width="*" Binding="{Binding Name}" />
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</UserControl>
