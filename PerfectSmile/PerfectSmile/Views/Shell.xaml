<my:RibbonWindow xmlns:my="http://schemas.microsoft.com/winfx/2006/xaml/presentation/ribbon"  x:Class="PerfectSmile.Views.Shell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:prism="http://prismlibrary.com/"
            xmlns:constant="clr-namespace:PerfectSmile.Constant"
            xmlns:imageFromFont="clr-namespace:ImageFromFont;assembly=ImageFromFont"
            WindowState="Maximized"  WindowStartupLocation="CenterScreen"
            prism:ViewModelLocator.AutoWireViewModel="True"
         Title="{x:Static constant:Constant+Shell.Title}"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <my:Ribbon Grid.Row="0" >
            <!--<my:Ribbon.ApplicationMenu>
                <my:RibbonApplicationMenu SmallImageSource="{imageFromFont:ImageFromFont Brush=Gold, FontFamily=/PerfectSmile;component/Resources/#FontAwesome, Text=&#xF016;}">
                    <my:RibbonApplicationMenuItem Header="Restart" ImageSource="{imageFromFont:ImageFromFont Brush=Red, FontFamily=/PerfectSmile;component/Resources/#FontAwesome, Text=&#xF01E;}" />
                    <my:RibbonApplicationMenuItem Header="Save" ImageSource="{imageFromFont:ImageFromFont Brush=Blue, FontFamily=/PerfectSmile;component/Resources/#FontAwesome, Text=&#xF0C7;}" />
                </my:RibbonApplicationMenu>
            </my:Ribbon.ApplicationMenu>-->

            <my:RibbonTab IsSelected="True" Header="Patient Details">

                <my:RibbonButton Label="Patient List"  LargeImageSource="{imageFromFont:ImageFromFont Brush=Green, FontFamily=/PerfectSmile;component/Resources/#FontAwesome, Text=&#xf0f1;}" Command="{Binding NavigateCommand}" CommandParameter="{x:Static constant:Constant+View.PatientList}" Width="100" Margin="2,-70,0,0" />
                <my:RibbonButton Label="Sheduled Appointment"  LargeImageSource="{imageFromFont:ImageFromFont Brush=Brown, FontFamily=/PerfectSmile;component/Resources/#FontAwesome, Text=&#xf098;}" Command="{Binding NavigateCommand}" CommandParameter="{x:Static constant:Constant+View.PatientList}" Width="100" Margin="2,-70,0,0" />
            </my:RibbonTab>
            <my:RibbonTab  IsSelected="false" Header="Patient form ">
                <my:RibbonButton Width="100" Margin="2,-70,0,0" Label="Add basic information" LargeImageSource="{imageFromFont:ImageFromFont Brush=blue, FontFamily=/PerfectSmile;component/Resources/#FontAwesome, Text=&#xf0f8;}" Command="{Binding NavigateCommand}" CommandParameter="{x:Static constant:Constant+View.PatientForm}" />
                <my:RibbonButton Width="100" Margin="2,-70,0,0" Label="Add patient history" LargeImageSource="{imageFromFont:ImageFromFont Brush=red, FontFamily=/PerfectSmile;component/Resources/#FontAwesome, Text=&#xf0f9;}" Command="{Binding NavigateCommand}" CommandParameter="{x:Static constant:Constant+View.PatientForm}" />
            </my:RibbonTab>

        </my:Ribbon>

        <ContentControl prism:RegionManager.RegionName="{x:Static constant:Constant+Region.MainRegion}" Grid.Row="1"/>

    </Grid>
</my:RibbonWindow>
